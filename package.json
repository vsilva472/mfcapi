{
  "name": "mfcapi",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production&& node ./bin/www",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "test-unit": "node_modules/mocha/bin/mocha test/unit/**.js --timeout=100000 --exit",
    "test-integration": "node_modules/mocha/bin/mocha test/integration/**.js --timeout=100000 --exit",
    "test": "npm run migrate&& npm run test-integration&& npm run test-unit",
    "test-local": "export $(cat .env | xargs) && npm run migrate&& npm run test-integration&& npm run test-unit",
    "start:dev": "node -r dotenv/config ./bin/www"
  },
  "dependencies": {
    "bcrypt": "^3.0.8",
    "cookie-parser": "^1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "express-validator": "^5.3.1",
    "http-errors": "~1.6.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.0",
    "mysql2": "^1.7.0",
    "nodemailer": "^4.7.0",
    "npm": "^6.14.6",
    "pug": "^3.0.1",
    "sequelize": "^5.21.5",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "dotenv": "^8.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.4",
    "sqlite3": "^4.1.1",
    "supertest": "^3.4.2"
  }
}
