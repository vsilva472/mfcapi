{
  "name": "mfcapi",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production&& node ./bin/www",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "test-unit": "node_modules/mocha/bin/mocha test/unit/**.js --timeout=100000 --exit",
    "test-integration": "node_modules/mocha/bin/mocha test/integration/**.js --timeout=100000 --exit",
    "test": "npm run migrate&& npm run test-integration&& npm run test-unit",
    "test-local": "export $(cat .env.testing | grep \"^[^#;]\" | xargs) && npm run test",
    "start:dev": "node -r dotenv/config ./bin/www"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.4",
    "debug": "~2.6.9",
    "express": "~4.19.2",
    "express-validator": "^5.3.1",
    "http-errors": "~2.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "~1.10.0",
    "mysql2": "^3.10.1",
    "nodemailer": "^4.7.0",
    "npm": "^8.11.0",
    "pug": "^3.0.3",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "chai-arrays": "^2.0.0",
    "dotenv": "^16.4.5",
    "mocha": "^8.3.2",
    "nodemon": "^3.1.3",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0"
  }
}
